        android:theme="@style/AppTheme">

        <activity android:name=".Main.alarm" />
        <activity android:name=".Main.call" />
        <activity android:name=".Main.camera" />
        <activity android:name=".Main.FirstActivity" />
        <activity android:name=".Main.FirstActivity2" />
        <activity android:name=".Main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main.Record" />
        <activity android:name=".Main.talk" />

        <activity android:name=".Myaccount.myaccount" />
        <activity android:name=".Myaccount.PasswordResetActivity" />
        <activity android:name=".Myaccount.ProfileResetActivity" />

