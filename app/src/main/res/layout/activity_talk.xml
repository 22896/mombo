<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/saaaa"
    tools:context="com.example.mombo.talk">

<!--    프레임 레이아웃은 마지막에 추가한 레이아웃이 가장 앞에 있다 -->
    <!--틀, 근데 이 부분은 메세지보낼떄 하단부분을 계속 보이게 하려면 틀을 프레임레이아웃으로..-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="75dp">
        <!--상단바-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:baselineAligned="true"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="1dp">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/noun_bell_3319638" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="246dp"
                android:layout_marginRight="246dp"
                android:layout_marginBottom="672dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/noun_phone_1778832" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/noun_user_2699583" />
        </LinearLayout>

        <!-- 가운데-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--하단 바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="37dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:paddingTop="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/noun_home_800461" />

            <ImageButton
                android:id="@+id/cam"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/noun_video_camera_3318574" />

            <ImageButton
                android:id="@+id/message"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/noun_talking_546894" />

            <ImageButton
                android:id="@+id/list"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/noun_menu_2091765" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>