<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mombo.check">


    <!--    틀-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="75dp">
        <!--상단바-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:baselineAligned="true"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="1dp">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/noun_bell_3319638" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="246dp"
                android:layout_marginRight="246dp"
                android:layout_marginBottom="672dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/noun_phone_1778832" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/noun_user_2699583" />
        </LinearLayout>

        <!-- 가운데-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜 선택"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="51dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="45dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray"
                    android:text="  1월"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="31dp"
                    tools:layout_editor_absoluteY="97dp" />

                <ImageButton
                    android:id="@+id/imageButton10"
                    android:layout_width="53dp"
                    android:layout_height="39dp"
                    app:srcCompat="@android:drawable/arrow_down_float"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="93dp" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="45dp"
                    android:layout_height="29dp"
                    android:background="@color/gray"
                    android:text="  1일"
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="131dp"
                    tools:layout_editor_absoluteY="99dp" />

                <ImageButton
                    android:id="@+id/imageButton11"
                    android:layout_width="53dp"
                    android:layout_height="39dp"
                    app:srcCompat="@android:drawable/arrow_down_float"
                    tools:layout_editor_absoluteX="176dp"
                    tools:layout_editor_absoluteY="93dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="288dp"
                android:layout_height="273dp"
                android:layout_marginLeft="40dp"
                app:srcCompat="@android:drawable/progress_indeterminate_horizontal"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="196dp" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(  )월 ( )일의 산모의 상태는______"
                android:layout_marginLeft="40dp"
                android:textColor="@color/black"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="443dp" />


        </LinearLayout>

        <!--하단 바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="37dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:paddingTop="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/noun_home_800461" />

            <ImageButton
                android:id="@+id/cam"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/noun_video_camera_3318574" />

            <ImageButton
                android:id="@+id/message"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/noun_talking_546894" />

            <ImageButton
                android:id="@+id/list"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/noun_menu_2091765" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>