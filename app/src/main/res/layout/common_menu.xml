<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/commonMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/btnCommonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#00ffffff"
        android:src="@drawable/round_home_24" />

    <ImageButton
        android:id="@+id/btnCommonCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#00ffffff"
        android:src="@drawable/round_camera_alt_24" />

    <ImageButton
        android:id="@+id/btnCommonChatting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#00ffffff"
        android:src="@drawable/round_chat_24" />

    <ImageButton
        android:id="@+id/btnCommonRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#00ffffff"
        android:src="@drawable/round_assessment_24" />
</LinearLayout>